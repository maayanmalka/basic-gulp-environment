extends ./templates/hp.jade

block title
  title The Catbears - Printable Activities

//- poster

block poster-bg
    img.center-img(src="../img/hp/poster-bg.png", alt="The Catbears" align="middle")

block poster-content
  .poster-content  
    .column
      .column--left
        .poster-logo
          img(src="../img/hp/hp-logo.png", alt="The Catbears Logo")
          h1.slogan-line 
            span.slogan-word.color--red Print  
            span.slogan-word.color--orange Make  
            span.slogan-word.color--skyblue Learn    
        p.poster-p Welcome to The Catbears! Here you can find lots of fun printable activities for your kids, simply print them out and start crafting!
        .buttons-container
            .btn.btn__buttons-container.btn__large.btn__primary.btn__sign-up.scroll-to-signup Sign Up
            a.btn.btn__buttons-container.btn__large.btn__secondary.btn__learn-more(href="../about.html") Learn More
    .column
      .column--right
        .poster-thumb.rotate-scale-on-hover
          iframe.poster-thumb--vid(src='https://www.youtube.com/embed/C-VCCDoCjdc?rel=0&;showinfo=0', frameborder='0', allowfullscreen='')
          //- img.poster-thumb--play-btn(src="../img/hp/vid-play-btn.png", alt="play button - The Catbears")
        a(href='felt-catbears.html')
         .micro-text Try This Activity
//- grid
block grid-title
  .grid-title
    h1 
      span.color--red Try 
      span.color--orange Our 
      span.color--skyblue Activities
    h2 Grab your scissors, grab your glue! Let’s get crafty! 
