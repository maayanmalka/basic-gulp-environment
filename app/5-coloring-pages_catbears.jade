extends ./templates/item-page__gallery__sale.jade

block title
  title 5 Coloring Pages - The Catbears


block gallery-items
  li.gallery__item.gallery__item--1 
    img(src='../img/pages/coloring-pages__001.png', alt='Coloring Page by The Catbears')
  li.gallery__item.gallery__item--2 
    img(src='../img/pages/coloring-pages__002.png', alt='Coloring Page by The Catbears')
  li.gallery__item.gallery__item--3
    img(src='../img/pages/coloring-pages__003.png', alt='Coloring Page by The Catbears')   

block main-item__title
  | Printable Coloring Pages 

block main-item__description--p
  | Download a PDF with 5 coloring pages, print it out and start coloring some cute Catbears!  

block main-item__info
  .main-item__info--list
    ul Here's what you'll need:
      li Printer
      li Coloring materials
      li A lot of excitement!

block main-item__cta--micro-text                  
  p PDF file ・ 2MB ・ 5 Printable Pages

block main-item__cta
  a.btn.btn__large.btn__primary.btn__payed(href='../pdf/The-Catbears-5-coloring-pages.pdf' target="_blank" onClick = "ga('send', 'event', 'Button', 'Click', 'FREE__5-coloring-pages'); lightboxInit()") Download Free PDF

block page-description
  .page-description
    h1 Description
      .columns
        .left-column
          p 
            | In every page there's something funny and un-expected - Can you find what it is?
            br
            br
            | Unlike most coloring pages, these ones are drawn freehand, which means there are no perfect vector shapes or curves. This child will feel at ease when coloring outside the lines, and give him more room to express himself.
        .right-column     
           img(src='../img/description-imgs/coloring__001.png', alt='Coloring Page by The Catbears')

